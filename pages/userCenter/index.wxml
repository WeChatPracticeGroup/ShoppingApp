<!--pages/userCenter/index.wxml-->
<view class="user-center">
  <user-center-card userInfo="{{userInfo}}" currentLoginType="{{currentLoginType}}" bind:getUserProfile="getUserProfile"></user-center-card>
  <view class="user-menu" wx:if="{{currentLoginType === 2}}">
    <view class="user-menu-item">
      <view class="user-menu-container">
        <view class="icon-container">
          <icon class="iconfont icon-map-location user-menu-icon map-icon"></icon>
          <text>通讯簿</text>
        </view>
        <icon class="iconfont icon-xiangyoujiantou arrow-icon"></icon>
      </view>

    </view>
  </view>
  <view class="user-logout" wx:if="{{currentLoginType === 2}}">
    <button class="user-logout-button" bindtap="Logout">退出登录</button>
  </view>
</view>