.tabs {
  font-size: 30rpx;
}
.sort-row {
  display: flex;
  flex-wrap: nowrap;
  justify-content: center;
  border-bottom: 5rpx solid rgb(229, 229, 229);
}
.sort {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 15rpx 20rpx;
  margin: 10rpx 5rpx;
  flex: 0.8;
}
.press-sort {
  box-shadow:0px 0px 32px rgba(195, 228, 212, 0.767); 
  color: black;
  background-color: steelblue;
}
.arrow-group {
  display: flex;
  flex-direction: column;
}
.arrow-up {
  margin: -4rpx 20rpx;
  border: 3px solid black;
  border-width: 0px 4rpx 4rpx 0px;
  display: inline-block;
  padding: 5px;
  transform: rotate(135deg);
  -webkit-transform: rotate(225deg);
}
.arrow-down {
  margin: -4rpx 20rpx;
  border: 3px solid black;
  border-width: 0px 4rpx 4rpx 0px;
  display: inline-block;
  padding: 5px;
  transform: rotate(135deg);
  -webkit-transform: rotate(45deg);
}
.switch-mode {
  flex: 0.2;
  height: 80rpx;
  width: 80rpx;
}
.content {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  margin-top: 20rpx;
}
.product-item {
  display: flex;
}
.product-img {
  height: 220rpx;
  width: 220rpx;
  padding: 20rpx;
}
.product-name {
  margin: 40rpx 0;
}
.product-price {
  color: red;
}