.container_page {
    display: flex;
    flex-direction: column;
}

.title_container_page {
    width: 100%;
    height: auto;
    position: sticky;
    left: 0;
    top: 0;
    background-color: #ffffff;
}

.goods_container_page {
    display: flex;
    flex-direction: column;
    padding-left: 24rpx;
    padding-right: 24rpx;
    background-color: #f7f7f7;
    z-index: -1;
}

.search-bar {
    padding-left: 24rpx;
    padding-right: 24rpx;
    height: 108rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.search {
    background-color: #f7f7f7;
    width: 100%;
    height: 84rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-left: 24rpx;
    border-radius: 12rpx;
}

.search text {
    color: #7a7a7a;
    font-size: 32rpx;
    margin-left: 24rpx;
}

.message {
    padding-left: 24rpx;
    padding-right: 24rpx;
}

.banner {
    margin-top: 24rpx;
    border-radius: 12rpx;
    width: 100%;
    height: 420rpx;
}

.banner image {
    border-radius: 24rpx;
    width: 100%;
    height: 420rpx;
}

.goods_container {
    padding: 24rpx;
    display: flex;
    background-color: #ffffff;
    flex-direction: column;
    border-radius: 8rpx;
    margin-top: 24rpx;
}

.goods_container_title {
    color: #222222;
    font-size: 40rpx;
    display: block;
    text-align: center;
    width: 100%;
}

.goods_container_description {
    margin-top: 16rpx;
    color: #333333;
    font-size: 24rpx;
    display: block;
    text-align: center;
    width: 100%;
}

.goods_container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-around;
}

.goods_items {
    display: flex;
    flex-direction: column;
    margin-top: 16rpx;
}

.goods_items image {
    width: 180rpx;
    height: 180rpx;
    border-radius: 16rpx;
}

.goods_items text {
    color: #222222;
    text-align: center;
}