.container_page {
    display: flex;
    flex-direction: column;
}

.title_container_page {
    width: 100%;
    height: auto;
    position: sticky;
    left: 0;
    top: 0;
    background-color: #ffffff;
}

.goods_container_page {
    display: flex;
    flex-direction: column;
    padding-left: 12px;
    padding-right: 12px;
    background-color: #f7f7f7;
    z-index: -1;
}

.search-bar {
    padding-left: 12px;
    padding-right: 12px;
    height: 54px;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.search {
    background-color: #f7f7f7;
    width: 100%;
    height: 42px;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-left: 12px;
    border-radius: 6px;
}

.search text {
    color: #7a7a7a;
    font-size: 16px;
    margin-left: 12px;
}

.message {
    padding-left: 12px;
    padding-right: 12px;
}

.banner {
    margin-top: 12px;
    border-radius: 6px;
    width: 100%;
    height: 210px;
}

.banner image {
    border-radius: 12px;
    width: 100%;
    height: 210px;
}

.goods_container {
    padding: 12px;
    display: flex;
    background-color: #ffffff;
    flex-direction: column;
    border-radius: 4px;
    margin-top: 12px;
}

.goods_container_title {
    color: #222222;
    font-size: 20px;
    display: block;
    text-align: center;
    width: 100%;
}

.goods_container_description {
    margin-top: 8px;
    color: #333333;
    font-size: 12px;
    display: block;
    text-align: center;
    width: 100%;
}

.goods_container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-around;
}

.goods_items {
    display: flex;
    flex-direction: column;
    margin-top: 8px;
}

.goods_items image {
    width: 90px;
    height: 90px;
    border-radius: 8px;
}

.goods_items text {
    color: #222222;
    text-align: center;
}