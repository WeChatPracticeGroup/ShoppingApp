.search-group {
  display: inline-flex;
  width: 100%;
  height: 100%;
  justify-content: flex-start;
  align-items: center;
  background: rgb(240, 240, 240);
  border-radius: 100rpx;
  padding: 0 15rpx;
}
.search-group__input {
  font-size: 25rpx;
  left: 14px;
}
.search-group__img {
  margin-right: 20rpx
}
.left-arrow {
  margin: 10rpx 30rpx;
  border: 1px solid black;
  border-width: 0px 5rpx 5rpx 0px;
  display: inline-block;
  padding: 10rpx;
  transform: rotate(135deg);
  -webkit-transform: rotate(135deg);
}